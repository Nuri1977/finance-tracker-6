
  <div class="row mt-4">
    <div class="col-9">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th colspan="3" class="page-header">
              <h2>My Friends</h2>
            </th>
          </tr>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @friends.each do |friend| %>
            <tr>
              <td><%= friend.full_name %></td>
              <td><%= friend.email %></td>
              <td>
                <%= link_to "View Profile", user_path(friend), class: "btn btn-success btn-sm" %>
                <%= link_to 'Stop_following',friendship_path(friend), method: :delete, data: {confirm: 'Are you sure?'},
                                           class: 'btn btn-sm btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
